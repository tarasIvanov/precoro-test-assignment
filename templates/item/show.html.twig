{% extends 'base.html.twig' %}

{% block title %}{{ item.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">{{ item.name }}</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="h4 mb-4">Назва товару: {{ item.name }}</p>
                        <p class="h4 mb-4">Ціна: {{ item.price }} грн</p>
                        
                        {% if is_granted('ROLE_USER') %}
                        {% endif %}
                        
                        <a href="{{ path('app_item_index') }}" class="btn btn-secondary">Назад до списку</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
